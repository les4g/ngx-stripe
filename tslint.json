{
    "extends": [
        "tslint-angular"
    ],
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            [
                "ngx-stripe"
            ],
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            [
                "ngx-stripe"
            ],
            "kebab-case"
        ],
        "import-blacklist": [
            false,
            "rxjs/Rx"
          ],
    }
}